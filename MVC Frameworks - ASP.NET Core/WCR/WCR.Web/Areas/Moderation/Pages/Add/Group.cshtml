@page
@model GroupModel
@{
    ViewData["Title"] = "Add group";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="" method="post">
            <h4>Create a new group.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Name"></label>
                <input asp-for="Input.Name" class="form-control" />
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>
            @*@Html.FormGroupFor(model => model.Input.Date)*@
            <div class="form-group">
                <label asp-for="Input.Date"></label>
                <input asp-for="Input.Date" class="form-control" />
                <span class="text-danger" asp-validation-for="Input.Date"></span>
            </div>
            @*<div class="form-group">
                    <label asp-for="Input.Date"></label>
                    <input asp-for="Input.Date" class="input-append date form_datetime" readonly />
                    <span class="input-group-addon"><span class="glyphicon glyphicon-remove"></span></span>
                    <span class="input-group-addon"><span class="glyphicon glyphicon-th"></span></span>
                    <span asp-validation-for="Input.Date" class="text-danger"></span>
                </div>*@
            <button type="submit" class="btn btn-default">Add Group</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


