@page
@model MatchModel
@{
    ViewData["Title"] = "Add match";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="" method="post">
            <h4>Create a new match.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.RoundIndex"></label>
                <input asp-for="Input.RoundIndex" class="form-control" />
                <span asp-validation-for="Input.RoundIndex" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.FirstTeamId"></label>
                <select asp-for="Input.FirstTeamId" asp-items="Model.Input.Teams" class="form-control"></select>
                <span asp-validation-for="Input.FirstTeamId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.SecondTeamId"></label>
                <select asp-for="Input.SecondTeamId" asp-items="Model.Input.Teams" class="form-control"></select>
                <span asp-validation-for="Input.SecondTeamId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Date"></label>
                <input asp-for="Input.Date" class="form-control" />
                <span class="text-danger" asp-validation-for="Input.Date"></span>
            </div>
            <button type="submit" class="btn btn-default">Add Match</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}