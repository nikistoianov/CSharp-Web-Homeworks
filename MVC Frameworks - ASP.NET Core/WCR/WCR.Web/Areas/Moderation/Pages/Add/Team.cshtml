@page
@model TeamModel
@{
    ViewData["Title"] = "Add team";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="" method="post">
            <h4>Create a new team.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Name"></label>
                <input asp-for="Input.Name" class="form-control" />
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.GroupId"></label>
                <select asp-for="Input.GroupId" asp-items="Model.Input.Groups" class="form-control"></select>
                <span asp-validation-for="Input.GroupId" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">Add Team</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
