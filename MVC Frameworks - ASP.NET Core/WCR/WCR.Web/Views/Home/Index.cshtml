@model ICollection<UserHomeViewModel>
@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/banner-1.jpg" alt="WCR 2018" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Wellcome to company competition &ldquo; World Cup Russia 2018 &ldquo;
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/banner-2.jpg" alt="WCR 2018" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Try your forecasting skills
                </p>
                <p>Compete with the best</p>
                <p>Earn the title &ldquo; Master of masters &ldquo; !</p>
            </div>
        </div>

    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<br />
<div class="row">
    <div class="col-md-4">
        <h2>Competition Rounds</h2>
        <ul>
            <partial name="_RoundsPartial" />
        </ul>
    </div>
    <div class="col-md-4">
        <h2>Overview</h2>
        <ul>
            <li><a asp-area="" asp-controller="Home" asp-action="Rules">Rules</a></li>
            <li><a asp-area="" asp-controller="Statistics" asp-action="Index">Statistics</a></li>
        </ul>
    </div>
    <div class="col-md-4">
        <h2>Participants</h2>
        <ul>
            @Html.DisplayForModel()
        </ul>
    </div>
</div>
