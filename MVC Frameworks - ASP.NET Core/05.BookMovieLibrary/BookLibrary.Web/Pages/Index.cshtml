@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<a asp-page="/Books/Add" class="btn btn-success">Add new book</a>
<table class="table table-striped">
    <thead>
        <tr>
            <th class="col-sm-6">Book Title</th>
            <th class="col-sm-4">Author</th>
            <th class="col-sm-2">Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model.Books)
        {
            <tr>
                <td>
                    <a asp-page="/Books/Details" asp-route-id="@(book.BookId)">
                        @book.Title
                    </a>
                </td>
                <td>
                    <a asp-page="/Authors/Details" asp-route-id="@(book.AuthorId)">
                        @book.Author
                    </a>
                </td>
                <td>@book.Status</td>
            </tr>
        }
    </tbody>
</table>

<a asp-controller="Movies" asp-action="Add" class="btn btn-success">Add new movie</a>
<table class="table table-striped">
    <thead>
        <tr>
            <th class="col-sm-6">Movie Title</th>
            <th class="col-sm-4">Director</th>
            <th class="col-sm-2">Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model.Movies)
        {
            <tr>
                <td>
                    <a asp-controller="Movies" asp-action="Details" asp-route-id="@(movie.MovieId)">
                        @movie.Title
                    </a>
                </td>
                <td>
                    <a asp-controller="Directors" asp-action="Details" asp-route-id="@(movie.DirectorId)">
                        @movie.Director
                    </a>
                </td>
                <td>@movie.Status</td>
            </tr>
        }
    </tbody>
</table>